{
    "$schema": "http://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "signals": [
        {
            "name": "width",
            "update": "data('layout')[0].width"
        },
        {
            "name": "height",
            "update": "data('layout')[0].height"
        },
        {
            "name": "unit",
            "value": {},
            "on": [
                {
                    "events": "mousemove",
                    "update": "group()._id ? group() : unit"
                }
            ]
        }
    ],
    "data": [
        {
            "name": "source",
            "url": "data/us-10m.json",
            "format": {
                "type": "topojson",
                "feature": "counties",
                "parse": {}
            },
            "transform": []
        },
        {
            "name": "layout",
            "values": [
                {}
            ],
            "transform": [
                {
                    "type": "formula",
                    "as": "width",
                    "expr": "21"
                },
                {
                    "type": "formula",
                    "as": "height",
                    "expr": "21"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "main",
            "type": "group",
            "from": {
                "data": "layout"
            },
            "encode": {
                "update": {
                    "width": {
                        "field": "width"
                    },
                    "height": {
                        "field": "height"
                    },
                    "fill": {
                        "value": "transparent"
                    }
                }
            },
            "projections": [
                {
                    "name": "projection",
                    "type": "albersUsa"
                }
            ],
            "marks": [
                {
                    "name": "marks",
                    "type": "shape",
                    "role": "geoshape",
                    "from": {
                        "data": "source"
                    },
                    "encode": {
                        "update": {
                            "fill": {
                                "value": "#4682b4"
                            },
                            "opacity": {
                                "value": 0.7
                            }
                        }
                    },
                    "transform": [
                        {
                            "type": "geoshape",
                            "projection": "projection",
                            "as": "shape"
                        }
                    ]
                }
            ]
        }
    ]
}